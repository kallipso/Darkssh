_userT=$(awk -F: '$3>=1000 {print $1}' /etc/passwd | grep -v nobody)
i=0
rm /root/usuarios.db
unset _userPass
while read _user; do
	i=$(expr $i + 1)
	_oP=$i
	[[ $i == [1-9] ]] && i=0$i && oP+=" 0$i"
	echo -e "\033[1;31m[\033[1;36m$i\033[1;31m] \033[1;37m- \033[1;32m$_user\033[0m"
    echo -e "$_user 1" >>/root/usuarios.db
	_userPass+="\n${_oP}:${_user}"
done <<< "${_userT}"
echo "user detabase is ready"
